/* pages/movies/movie-list/movie-list.wxss */
@import '../movie/movie';
.movie-list-container{
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
  background: #fff;
}
.movie-head{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: baseline;
  padding: 30rpx 20rpx 22rpx;
}
.slogan{
  font-size: 24rpx;
}
.more-text{
  margin-right: 10rpx;
  color: #1f4b5a;
}
.more-img{
  width: 9rpx;
  height: 16rpx;
}
.movies-container{
  display: flex;
  flex-direction: row;
}